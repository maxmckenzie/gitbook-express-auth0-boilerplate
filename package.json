{
  "name": "gitbook-express-auth0-boilerplate",
  "version": "1.0.0",
  "description": "Host a GitBook in Express and secure it with Auth0 - the perfect setup for internal documentation!",
  "main": "index.js",
  "scripts": {
    "build:prod": "babel src -d dist",
    "build:book": "gitbook build ./content/",
    "serve:book": "gitbook serve ./content/",
    "serve:dev": "cross-env NODE_ENV=development nodemon --exec babel-node src/index.js",
    "serve:prod": "cross-env NODE_ENV=production node dist/server.js",
    "postinstall": "npm run build"
  },
  "keywords": [
    "auth0",
    "gitbook",
    "express"
  ],
  "engines": {
    "node": "5.3.0"
  },
  "author": "Sandrino Di Mattia",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.6.1",
    "cookie-parser": "^1.4.1",
    "cross-env": "^1.0.7",
    "express": "^4.13.3",
    "express-session": "^1.13.0",
    "gitbook-cli": "^1.0.1",
    "nconf": "^0.8.2",
    "nodemon": "^1.11.0",
    "passport": "^0.3.2",
    "passport-auth0": "^0.5.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1"
  }
}
